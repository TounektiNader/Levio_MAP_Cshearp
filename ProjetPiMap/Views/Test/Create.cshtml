@model ProjetPiMap.Models.TestModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/TempleAdmin.cshtml";
}





<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Question</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item">Test</li>
            <li class="breadcrumb-item active">Add-Test</li>
        </ol>
    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add New Question </h4>
                 
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <form class="form-material m-t-40">

                                <div class="form-group">
                                    <div class="controls">

                                        @Html.DropDownListFor(m => m.type, ((List<string>)ViewBag.list).Select(m => new SelectListItem { Text = m, Value = m }), "Select Type", new { @class = "form-control" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    @Html.Label("Question  ", new { htmlAttributes = new { @class = "form-control form-control-line" } })




                                    @Html.EditorFor(model => model.question, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                                    @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Choix n°1  ", new { htmlAttributes = new { @class = "form-control form-control-line" } })




                                    @Html.EditorFor(model => model.reponse, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                                    <span class="help-block text-muted"><small>This will be the correct answer</small></span>
                                    @Html.ValidationMessageFor(model => model.reponse, "", new { @class = "text-danger" })


                                </div>
                                <div class="form-group">
                                    @Html.Label("Choix n°2 ", new { htmlAttributes = new { @class = "form-control form-control-line" } })


                                    @Html.EditorFor(model => model.choix1, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                                    @Html.ValidationMessageFor(model => model.choix1, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Choix n°3 ", new { htmlAttributes = new { @class = "form-control form-control-line" } })
                                    @Html.EditorFor(model => model.choix2, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                                    @Html.ValidationMessageFor(model => model.choix2, "", new { @class = "text-danger" })
                                </div>





                                <div class="form-group">
                                    <div class="col-md-offset-5 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-info" />
                                    </div>
                                </div>
                             
                            </form>
                        }
                            

                </div>
            </div>


        </div>
    </div>

</div>







@section Scripts {
 <script src="~/ContentA/assets/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap tether Core JavaScript -->
<script src="~/ContentA/assets/plugins/bootstrap/js/popper.min.js"></script>
