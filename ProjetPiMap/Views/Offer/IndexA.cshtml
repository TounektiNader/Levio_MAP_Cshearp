                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <ul class="btn-group">
                                    <li href='@Url.Action("Create","Offer")' class="btn btn-info">
                                        Add New <i class="fa fa-plus"></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle" id="example4">
                            <thead>
                                <tr class="odd gradeX">
                                    <th> Job Type </th>
                                    <th> Job Description </th>
                                    <th> Job Experience </th>
                                    <th> Job Requirements </th>
                                    <th> Posted On </th>
                                    <th>Deadline</th>
                                    <th>Expected Salary</th>
                                    <th> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JobType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JobExperience)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JobDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JobRequirements)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PostedOn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastDay)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ExpectedSalary)
                                            </td>
                                            <td>
                                                <a href='@Url.Action("Edit1","Offer",new { id = item.offerId })' class="btn btn-primary btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </a>

                                                <a href='@Url.Action("Delete","Offer", new { id = item.offerId })' class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash-o "></i>
                                                </a>
                                            </td>
                                            @*<td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.offerId }) |
                                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.offerId })
                                                </td>*@
                                        </tr>
                                    }
                            </tbody>
                        </table>
