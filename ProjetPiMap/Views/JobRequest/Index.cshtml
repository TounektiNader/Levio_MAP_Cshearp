@model IEnumerable<ProjetPiMap.Models.JobRequestModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TempleAdmin.cshtml";
}



<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Job Request</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item">pages</li>
            <li class="breadcrumb-item active">Job Request</li>
        </ol>
    </div>
    <div>
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- column -->
      
        
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Table Of Job Request </h4>
                    <div class="table-responsive">
                        @using (Html.BeginForm("Index", "JobRequest", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <table>
                                <tr>
                                    <td>
                                        <div>

                                             @Html.TextBox("searchString")

                                        </div>
                                    </td>
                                    <td> <input type="submit" value="Search By Speciality" id="recherche" placeholder="Search By Speciality"/> </td>
                                </tr>

                            </table>
                        }


                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th>Id</th>
                                    <th>State</th>
                                    <th>Date Apply</th>
                                    <th>Speciality</th>
                                    
                                    <th>Id Resource</th>
                                    <th class="text-nowrap">Action</th>
                                </tr>
                            </thead>
                            <tbody>
@foreach (var item in Model)
{
                                <tr>
                                    <td><a href="javascript:void(0)">@Html.DisplayFor(modelItem => item.jobRequestId)</a></td>
                                    <td>@Html.DisplayFor(modelItem => item.state)</td>
                                    <td><span class="text-muted"><i class="fa fa-clock-o"></i>@Html.DisplayFor(modelItem => item.dateApply, new { @Value = item.dateApply.ToString("dd-MMM-yyyy") })</span> </td>
                                    <td><span class="label label-warning">@Html.DisplayFor(modelItem => item.speciality)</span></td>
                                  
   


                                    <td>@Html.DisplayFor(modelItem => item.userId)</td>
                                    <td class="text-nowrap">
                                        <a href='@Url.Action("Delete","JobRequest",new { @id= item.jobRequestId })' data-toggle="tooltip" data-original-title="Close"> <i class="fa fa-close text-danger"></i> </a>
                                    </td>

                                </tr>
}
                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- column -->
    
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
  
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>

@section Scripts{
    <script src="~/ContentA/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/ContentA/assets/plugins/bootstrap/js/popper.min.js"></script>

    <script src="~/ContentA/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/ContentA/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/ContentA/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/ContentA/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/ContentA/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/ContentA/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/ContentA/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->
    <!--morris JavaScript -->
    <script src="~/ContentA/assets/plugins/raphael/raphael-min.js"></script>
    <script src="~/ContentA/assets/plugins/morrisjs/morris.min.js"></script>
    <!-- sparkline chart -->
    <script src="~/ContentA/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/ContentA/js/dashboard4.js"></script>
    <!-- ============================================================== -->
