@model IEnumerable<ProjetPiMap.Models.SkillsViewModel>
@{
    ViewBag.Title = "Index";
}

<table class="table">
    <thead>
        <tr>

            <th>Id</th>
            <th>State</th>
            <th>Date Apply</th>
            <th>Speciality</th>

            <th>Id Resource</th>
            <th class="text-nowrap">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a href="javascript:void(0)">@Html.DisplayFor(modelItem => item.skillId)</a></td>
                <td>@Html.DisplayFor(modelItem => item.speciality)</td>
                <td><span class="text-muted"><i class="fa fa-clock-o"></i>@Html.DisplayFor(modelItem => item.levelStudy)</span> </td>
                <td><span class="label label-warning">@Html.DisplayFor(modelItem => item.experience)</span></td>




                <td class="text-nowrap">
                    <a href="#" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                    <a href="#" data-toggle="tooltip" data-original-title="Close"> <i class="fa fa-close text-danger"></i> </a>
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.skillId })
                    
                </td>

            </tr>
        }

    </tbody>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
