                            <h3 class="card-title">Compose New Claim</h3>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.type,  htmlAttributes: new { @class = "width: 100%; max-width: 100%;" })
                                        <div class="col-md-12">

                                            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })

                                            @{
                                                List<SelectListItem> listItems = new List<SelectListItem>();
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Claim",
                                                    Value = "Claim"
                                                });

                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "satisfaction",
                                                    Value = "satisfaction"
                                                });
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Technical problem",
                                                    Value = "Technical problem"
                                                });
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = " Other",
                                                    Value = " Other",
                                                });
                                            }

                                            @Html.DropDownListFor(model => model.type, listItems, "Select", new { htmlAttributes = new { @class = "width: 100%; max-width: 100%;", } })

                                        </div>

                                        </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.topic, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.ValidationMessageFor(model => model.topic, "", new { @class = "text-danger" })
                                            @Html.TextAreaFor(model => model.topic, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })

                                        </div>
                                    </div>
            
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success m-t-20"><i class="fa fa-envelope-o"></i> Send</button>

                                    </div>
                                </div>
                                            }


                          
