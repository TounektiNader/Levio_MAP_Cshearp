@model ProjetPiMap.Models.BigViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/TempleClient.cshtml";
}

@section templte2{



    <link rel="stylesheet" href="~/ContentC/css/bootstrap.min.css">

    <!-- JQUERY MENU -->
    <link rel="stylesheet" href="~/ContentC/css/mega_menu.min.css">

    <!-- ANIMATION -->
    <link rel="stylesheet" href="~/ContentC/css/animate.min.css">

    <!-- OWl  CAROUSEL-->
    <link rel="stylesheet" href="~/ContentC/css/owl.carousel.css">
    <link rel="stylesheet" href="~/ContentC/css/owl.style.css">

    <!-- TEMPLATE CORE CSS -->
    <link rel="stylesheet" href="~/ContentC/css/style.css">

    <!-- FOR THIS PAGE ONLY -->
    <link href="~/ContentC/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/ContentC/css/jquery.tagsinput.min.css">

    <!-- FONT AWESOME -->
    <link rel="stylesheet" type="text/css" href="~/ContentC/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/ContentC/css/et-line-fonts.css" type="text/css">

    <!-- Google Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,900,300" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet" type="text/css">
    <!-- JavaScripts -->

    <script src="~/ContentC/js/modernizr.js"></script>


}




<div id="spinner">
    <div class="spinner-img">
        <img alt="Opportunities Preloader" src="images/loader.gif" />
        <h2>Please Wait.....</h2>
    </div>
</div>

<section class="post-job">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 nopadding">
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="profile-card">
                        <div class="banner">
                            <img src="~/ContentC/images/building.jpg" alt="" class="img-responsive">
                        </div>
                        <div class="user-image">
                            <img src="~/ContentC/images/users/12.jpg" class="img-responsive img-circle" alt="">
                        </div>
                        <div class="card-body">
                            <h3>@Html.DisplayFor(model => model.resourceViewModel.firstname) @Html.DisplayFor(model => model.resourceViewModel.lastname)</h3>
                            <span class="title">@Html.DisplayFor(model => model.resourceViewModel.Email)</span>
                        </div>
                      
                        
                    </div>
                    <div class="profile-nav">
                        <div class="panel">
                            <ul class="nav nav-pills nav-stacked">

                                <li class="active">
                                    <a href='@Url.Action("Index", "Attachment")'> <i class="fa fa-file-o"></i>List Attachment </a>
                                </li>

                                <li>
                                    <a href='@Url.Action("Index", "Folder")'> <i class="fa fa-file-o"></i>Followed Folder</a>
                                </li>
                                <li>
                                    <a href='@Url.Action("Index", "Offer")'> <i class="fa  fa-bookmark-o"></i> Offer Jobs </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="col-md-8 col-sm-12 col-xs-12" style="top: 100px;">
                    <div id="exampleBasic" class="wizard">
                        <ul class="wizard-steps light-grey panel" role="tablist">
                            <li class="active" role="tab">
                                <h4><span>1</span>Step</h4>
                            </li>
                            <li role="tab">
                                <h4><span>2</span>Step</h4>
                            </li>
                            <li role="tab">
                                <h4><span>3</span>Step</h4>
                            </li>
                            <li role="tab">
                                <h4><span>4</span>Step</h4>
                            </li>
                        </ul>
                        <div class="wizard-content">
                            <div class="wizard-pane active" role="tabpanel">

                                @if (Model.folderViewModel.etape == 0)
                                {
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Pass Test</label>
                                                <a class="btn btn-danger" href='@Url.Action("passerTest", "Test",new{ type="Francais"})' style="width: 146px;margin-left: 30px;"> Start </a>
                                            </div>
                                        </div>


                                    </div>
                                }
                                else
                                { <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Type Test</label>
                                            <input type="text" placeholder="@Html.DisplayFor(model => model.folderViewModel.typeTest)" class="form-control" value="@Html.DisplayFor(model => model.folderViewModel.typeTest)" readonly>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Test Result</label>
                                            <input type="text" placeholder='@Html.DisplayFor(model => model.folderViewModel.testResult)/20' class="form-control" readonly>
                                        </div>
                                    </div>
                                </div> }
                            </div>
                            <div class="wizard-pane" role="tabpanel">
                                @if (Model.folderViewModel.etape == 1)
                                {
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Pass Test</label>
                                                <a class="btn btn-danger" href='@Url.Action("passerTest", "Test",new{ type= "Development" })' style="width: 146px;margin-left: 30px;"> Start </a>
                                            </div>
                                        </div>


                                    </div>
                                }
                                else
                                {        <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Type Test</label>
                                            <input type="text" placeholder="@Html.DisplayFor(model => model.folderViewModel.typeTest)" class="form-control" value="@Html.DisplayFor(model => model.folderViewModel.typeTest)" readonly>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Test Result</label>
                                            <input type="text" placeholder='@Html.DisplayFor(model => model.folderViewModel.testResult)/20' class="form-control" readonly>
                                        </div>
                                    </div>
                                </div> }
                            </div>

                            <div class="wizard-pane" role="tabpanel">
                                @if (Model.folderViewModel.etape == 2)
                                {
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Pass Test</label>
                                                <a class="btn btn-danger" href='@Url.Action("passerTest", "Test",new{ type= "Human resource" })' style="width: 146px;margin-left: 30px;"> Start </a>
                                            </div>
                                        </div>


                                    </div>
                                }
                                else
                                {        <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Type Test</label>
                                            <input type="text" placeholder="@Html.DisplayFor(model => model.folderViewModel.typeTest)" class="form-control" value="@Html.DisplayFor(model => model.folderViewModel.typeTest)" readonly>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Test Result</label>
                                            <input type="text" placeholder='@Html.DisplayFor(model => model.folderViewModel.testResult)/20' class="form-control" readonly>
                                        </div>
                                    </div>
                                </div> }
                            </div>

                            <div class="wizard-pane" role="tabpanel">
                                @if (Model.folderViewModel.state=="Assign")
                                {
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Lettre Embauchment</label>
                                                <a class="btn btn-danger" href='@Url.Action("ExportReport", "Lettre",new{ @username= Model.resourceViewModel.Email })' style="width: 146px;margin-left: 30px;"> Telecharger Ma Lettre D'embauche </a>
                                            </div>
                                        </div>


                                    </div>
                                }
                                else
                                {        <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Type Test</label>
                                            <input type="text" placeholder="@Html.DisplayFor(model => model.folderViewModel.typeTest)" class="form-control" value="@Html.DisplayFor(model => model.folderViewModel.typeTest)" readonly>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Test Result</label>
                                            <input type="text" placeholder='@Html.DisplayFor(model => model.folderViewModel.testResult)' class="form-control" readonly>
                                        </div>
                                    </div>
                                </div> }
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


@section Scripts{


    <script type="text/javascript" src="~/ContentC/js/jquery-3.1.1.min.js"></script>

    <!-- JAVASCRIPT JS  -->
    <script type="text/javascript" src="~/ContentC/js/jquery-migrate-1.2.1.min.js"></script>

    <!-- BOOTSTRAP CORE JS -->
    <script type="text/javascript" src="~/ContentC/js/bootstrap.min.js"></script>

    <!-- JQUERY SELECT -->
    <script src="~/ContentC/js/select2.min.js" type="text/javascript"></script>

    <!-- MEGA MENU -->
    <script type="text/javascript" src="~/ContentC/js/mega_menu.min.js"></script>



    <!-- JQUERY COUNTERUP -->
    <script type="text/javascript" src="~/ContentC/js/counterup.js"></script>

    <!-- JQUERY WAYPOINT -->
    <script type="text/javascript" src="~/ContentC/js/waypoints.min.js"></script>

    <!-- JQUERY REVEAL -->
    <script type="text/javascript" src="~/ContentC/js/footer-reveal.min.js"></script>

    <!-- Owl Carousel -->
    <script type="text/javascript" src="~/ContentC/js/owl-carousel.js"></script>

    <!-- CORE JS -->
    <script type="text/javascript" src="~/ContentC/js/custom.js"></script>

    <!-- FOR THIS PAGE ONLY -->
    <script type="text/javascript" src="~/ContentC/js/jquery.tagsinput.min.js"></script>
    <script type="text/javascript">
            $(".questions-category").select2({
                placeholder: "Select Post Category",
                allowClear: true,
                maximumSelectionLength: 3,
                /*width: "50%",*/
            });
            $('#tags').tagsInput({
                width: 'auto'
            });
    </script>
    <!-- CK-EDITOR -->
    <script src="../../../cdn.ckeditor.com/4.5.10/standard/ckeditor.js"></script>
    <script type="text/javascript">
            CKEDITOR.replace('ckeditor.html');
    </script>
    <!-- WIZARD -->
    <script src="~/ContentC/js/jquery-wizard.min.js" type="text/javascript"></script>
    <script>
            $('#exampleBasic').wizard({
                onFinish: function() {
                    alert('finish');
                }
            });
    </script>


}