@model Domain.Entities.Claim



@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/TempleClient.cshtml";
}


<!-- Stylesheets -->
<link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600" rel="stylesheet">
<link rel="stylesheet" href="css/bootstrap.css">
<link rel="stylesheet" href="css/font-awesome.min.css">
<link rel="stylesheet" href="css/jquery-ui.css">
<link rel="stylesheet" type="text/css" href="css/jquery.tagsinput.css" />
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="css/responsive.css">


<div class="header-page-title job-registration clearfix">
    <div class="title-overlay"></div>
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Project Registration</li>
        </ol>

    </div> <!-- end .container -->

</div>


@using (Html.BeginForm("Create", "CrudClaims", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
               @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div id="page-content" class="job-registration full-width">
        <div class="container">
            <div class="page-content">
                <div class="table-responsive">

                    <form action="#" class="default-form">
                        <div class="form-banner-button  mt50 mb20">

                            <div class="css-table">
                                <div class="registration-detail css-table-cell">
                                    <div class="pull-left">
                                        <p>Create your own Claim</p>
                                    </div>

                                    <!-- end .language -->



                                </div> <!-- job-details -->


                            </div> <!-- end .css-table -->


                        </div> <!-- end .form-banner-button -->
                        <!-- start main form content -->

                        <div class="job-regi-single">
                            <div class="css-table">

                                <div class="css-table-cell">
                                    <label><span>*</span>Type</label>
                                </div>

                                <div class="registration-detail css-table-cell">
                                    @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })

                                    @{
                                        List<SelectListItem> listItems = new List<SelectListItem>();
                                           listItems.Add(new SelectListItem
                                        {
                                            Text = "Claim",
                                            Value = "Claim"
                                        });

                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "satisfaction",
                                            Value = "satisfaction"
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Technical problem",
                                            Value = "Technical problem"
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = " Other",
                                            Value = " Other",
                                        });
                                    }

                                    @Html.DropDownListFor(model => model.type, listItems, "Select", new { htmlAttributes = new { @class = "width: 100%; max-width: 100%;", } })


                                </div> <!-- end .registration-detail -->



                            </div> <!-- end .css-table -->
                        </div> <!-- end .job-regi-single -->

                        <div class="job-regi-single">
                            <div class="css-table">

                                <div class="css-table-cell">
                                    <label><span>*</span>Topic</label>

                                </div>

                                <div class="registration-detail css-table-cell">


                                    @Html.TextAreaFor(model => model.topic, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                                    @Html.ValidationMessageFor(model => model.topic, "", new { @class = "text-danger" })

                                </div> <!-- end .registration-detail -->




                            </div> <!-- end .css-table -->
                        </div> <!-- end .job-regi-single -->

                        <div class="job-regi-single">
                            <div class="css-table">

                             

                            </div> <!-- end .css-table -->
                        </div> <!-- end .job-regi-single -->

                    
                          <div class="job-regi-single">
                            <div class="css-table">

                                <div class="css-table-cell">
                                    <label><span>*</span>picture</label>
                                </div>

                                @*<div class="editor-label">
                                    @Html.LabelFor(model => model.picture)
                                </div>*@
                                <div class="editor-field">
                                    Upload a file
                                    @Html.TextBox("file", "", new { type = "file" })


                                    @Html.ValidationMessageFor(model => model.picture)
                                </div>



                            </div>  
                        </div> 
                     

                        <div class="save-cancel-button">
                            <input type="submit" value="Send" class="btn btn-default" />

                        </div> <!-- end .save-cancel-button -->

                    </form>
                </div>
            </div> <!-- end .page-content -->
        </div> <!-- end .container -->
    </div>
}



<script src="~/Content/js/jquery-3.1.1.min.js"></script>
<script src="~/Content/js/jquery.ba-outside-events.min.js"></script>
<script src="~/Content/js/jquery.inview.min.js"></script>
<script src="~/Content/js/jquery.responsive-tabs.js"></script>
<script src="~/Content/js/jquery.tagsinput.min.js"></script>
<script src="~/Content/js/owl.carousel.html"></script>
<script src="~/Content/js/bootstrap.js"></script>
<script src="~/Content/js/jquery-ui.js"></script>
<script type="text/javascript" src="~/Content/js.nicedit.com/nicEdit-latest.js"></script>

<script src="~/Content/js/scripts.js"></script>

<script type="text/javascript">


        new nicEditor().panelInstance('editor');

        $('.nicEdit-panelContain').parent().width('100%');
        $('.nicEdit-panelContain').parent().next().width('100%');


</script>








@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
















